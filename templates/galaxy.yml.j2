---
{{ ansible_managed | comment }}

name: Release to Ansible Galaxy

on:
  release:
    types: [created, edited, published, released]
jobs:
  release:
    runs-on: ubuntu-20.04
    steps:
      - name: galaxy
        uses: buluma/galaxy-action@v6.25.22
        with:
          galaxy_api_key: {% raw %}${{ secrets.galaxy_api_key }}{% endraw %}

          git_branch: master
